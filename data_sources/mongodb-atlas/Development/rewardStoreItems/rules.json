{
    "collection": "rewardStoreItems",
    "database": "Development",
    "roles": [
        {
            "name": "admin_user",
            "apply_when": {
                "%%user.custom_data": {
                    "account_type": "admin"
                },
                "anyOf": [
                    {
                        "organization_id": "%%user.custom_data.organization_id"
                    },
                    {
                        "class_id": {
                            "%in": "%%user.custom_data.classes"
                        }
                    }
                ]
            },
            "fields": {
                "_id": {},
                "listed_date": {},
                "num_available": {
                    "write": true
                },
                "reward_store_id": {}
            },
            "read": true,
            "insert": true,
            "delete": true,
            "search": true,
            "additional_fields": {
                "write": true
            }
        },
        {
            "name": "teacher_user",
            "apply_when": {
                "%%user.custom_data": {
                    "account_type": "teacher"
                },
                "anyOf": [
                    {
                        "organization_id": "%%user.custom_data.organization_id"
                    },
                    {
                        "class_id": {
                            "%in": "%%user.custom_data.classes"
                        }
                    }
                ]
            },
            "fields": {
                "_id": {},
                "listed_date": {},
                "num_available": {
                    "write": true
                },
                "reward_store_id": {}
            },
            "read": true,
            "insert": true,
            "delete": true,
            "search": true,
            "additional_fields": {
                "write": true
            }
        },
        {
            "name": "student_user",
            "apply_when": {
                "%%user.custom_data": {
                    "account_type": "student"
                },
                "anyOf": [
                    {
                        "organization_id": "%%user.custom_data.organization_id"
                    },
                    {
                        "class_id": {
                            "%in": "%%user.custom_data.classes"
                        }
                    }
                ]
            },
            "fields": {
                "_id": {},
                "listed_date": {},
                "num_available": {
                    "write": {
                        "%%this": {
                            "$lte": "%%prev"
                        }
                    }
                },
                "reward_store_id": {}
            },
            "read": true,
            "insert": false,
            "delete": false,
            "search": true,
            "additional_fields": {}
        },
        {
            "name": "no_access",
            "apply_when": {},
            "fields": {
                "_id": {},
                "listed_date": {},
                "num_available": {},
                "reward_store_id": {}
            },
            "insert": false,
            "delete": false,
            "search": true,
            "additional_fields": {}
        }
    ]
}
