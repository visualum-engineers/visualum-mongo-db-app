                "%%user.custom_data": {
                    "account_type": "admin"
                },
                "%%true": {
                    "%function": {
                        "name": "validate_reward_items_user",
                        "arguments": [
                            "%%user.custom_data"
                        ]
                    }
                }
            },
            "fields": {
                "_id": {},
                "listed_date": {},
                "num_available": {
                    "write": true
                },
