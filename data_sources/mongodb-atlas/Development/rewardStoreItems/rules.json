{
    "collection": "rewardStoreItems",
    "database": "Development",
    "roles": [
        {
            "name": "admin_user",
            "apply_when": {
                "%%true": {
                    "%function": {
                        "arguments": [
                            "%%user.custom_data",
                            "%%root.reward_store_id"
                        ],
                        "name": "validate_reward_items_user"
                    }
                },
                "%%user.custom_data": {
                    "account_type": "admin"
                }
            },
            "fields": {
                "_id": {},
                "listed_date": {},
                "num_available": {
                    "write": true
                },
                "reward_store_id": {}
            },
            "read": true,
            "insert": true,
            "delete": true,
            "search": true,
            "additional_fields": {
                "write": true
            }
        },
        {
            "name": "teacher_user",
            "apply_when": {
                "%%true": {
                    "%function": {
                        "arguments": [
                            "%%user.custom_data",
                            "%%root.reward_store_id"
                        ],
                        "name": "validate_reward_items_user"
                    }
                },
                "%%user.custom_data": {
                    "account_type": "teacher"
                }
            },
            "fields": {
                "_id": {},
                "listed_date": {},
                "num_available": {
                    "write": true
                },
                "reward_store_id": {}
            },
            "read": true,
            "insert": true,
            "delete": true,
            "search": true,
            "additional_fields": {
                "write": true
            }
        },
        {
            "name": "student_user",
            "apply_when": {
                "%%true": {
                    "%function": {
                        "arguments": [
                            "%%user.custom_data",
                            "%%root.reward_store_id"
                        ],
                        "name": "validate_reward_items_user"
                    }
                },
                "%%user.custom_data": {
                    "account_type": "student"
                }
            },
            "fields": {
                "_id": {},
                "listed_date": {},
                "num_available": {
                    "write": {
                        "%%this": {
                            "$lte": "%%prev"
                        }
                    }
                },
                "reward_store_id": {}
            },
            "read": true,
            "insert": false,
            "delete": false,
            "search": true,
            "additional_fields": {}
        },
        {
            "name": "no_access",
            "apply_when": {},
            "fields": {
                "_id": {},
                "listed_date": {},
                "num_available": {},
                "reward_store_id": {}
            },
            "insert": false,
            "delete": false,
            "search": true,
            "additional_fields": {}
        }
    ]
}
