{
    "collection": "users",
    "database": "Development",
    "roles": [
        {
            "name": "owner_of_doc",
            "apply_when": {
                "_id": "%%user.id"
            },
            "fields": {
                "_id": {
                    "write": {
                        "%%prev": {
                            "$exists": false
                        }
                    }
                },
                "account_type": {
                    "write": {
                        "%%prev": {
                            "$exists": false
                        }
                    }
                },
                "admins": {
                    "write": true
                },
                "classes": {
                    "write": true
                },
                "email_confirmed": {
                    "write": {
                        "%%prev": {
                            "$exists": false
                        }
                    }
                },
                "first_name": {
                    "write": true
                },
                "last_name": {
                    "write": true
                },
                "organization_id": {
                    "write": true
                },
                "payment_confirmed": {
                    "write": {
                        "%%prev": {
                            "$exists": false
                        }
                    }
                },
                "payment_info": {
                    "write": true
                },
                "teachers": {
                    "write": true
                },
                "user_avatar": {
                    "write": true
                },
                "user_creation_date": {
                    "write": {
                        "%%prev": {
                            "$exists": false
                        }
                    }
                },
                "user_points": {
                    "write": {
                        "%%prev": {
                            "$exists": false
                        }
                    }
                },
                "user_settings": {
                    "write": true
                }
            },
            "read": true,
            "insert": true,
            "delete": true,
            "search": true,
            "additional_fields": {
                "write": true
            }
        },
        {
            "name": "admin_other_doc",
